%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path}= t('layouts.shop_name')
      %a.shop-link.pull-right.visible-xs{href: cart_path}
        %span.shop-icon
          %span.shop-quantity= current_order_items_count
    %a.shop-link.pull-right.hidden-xs{href: cart_path}
      %span.shop-icon
        %span.shop-quantity= current_order_items_count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            %a{href: root_path}= t('layouts.home')
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}
              = t('layouts.shop')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li= link_to t('categories.all_books'), books_path, class: 'collapse-link'
              - categories.each do |category|
                %li= link_to category.name, books_path(category: category.id), class: 'collapse-link'
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('layouts.account')
              %ul.dropdown-menu
                %li
                  %a{href: "#"}= t('layouts.orders')
                %li
                  %a{href: edit_user_registration_path}= t('layouts.settings')
                %li.divider{role: "separator"}
                %li
                  %a{href: destroy_user_session_path, 'data-method': :delete}= t('layouts.log_out')
          - else
            %li
              %a{href: new_user_session_path}= t('layouts.sign_in')
            %li
              %a{href: new_user_registration_path}= t('layouts.sign_up')
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            %a{href: root_path}= t('layouts.home')
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
              = t('layouts.shop')
            %ul.dropdown-menu
              %li= link_to t('shop.all_books'), books_path, class: 'collapse-link'
              - categories.each do |category|
                %li= link_to category.name, books_path(category: category.id), class: 'collapse-link'
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('layouts.account')
              %ul.dropdown-menu
                %li
                  %a{href: "#"}= t('layouts.orders')
                %li
                  %a{href: edit_user_registration_path}= t('layouts.settings')
                %li.divider{role: "separator"}
                %li
                  %a{href: destroy_user_session_path, 'data-method': :delete}= t('layouts.log_out')
          - else
            %li
              %a{href: new_user_session_path}= t('layouts.sign_in')
            %li
              %a{href: new_user_registration_path}= t('layouts.sign_up')