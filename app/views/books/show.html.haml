%main.container
  %a.general-back-link{href: url_for(:back)}
    %i.fa.fa-long-arrow-left.mr-15
    = t('books.back_to_results')
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: @presenter.title_image_url }
        .images.clearfix
          - @presenter.book.images_urls.each do |url|
            %a.img-link{href: "#"}
              %img{src: url}
    .col-sm-6
      %h1.mt-res-0= @presenter.book.title
      %p.lead.small= @presenter.book.authors_names
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10 #{t('currency')}#{@presenter.book.price}
        .col-xs-5.col-md-3
          .input-group.general-position
            %a.input-link.b-n.pt-7#minus
              %i.fa.fa-minus.line-height-40
            = text_field_tag "books_count", "", class: 'form-control quantity-input input-count-book', value: 1
            %a.b-n.input-link#plus
              %i.fa.fa-plus.line-height-40
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position= t('books.add_to_cart')
      .general-info-wrap.divider-lg
        %p= t('books.description')
        %p.lead.small.line-height-2
          %span#short_text
            = @presenter.short_description
          - if @presenter.description_long?
            %span#more_text.d-n
              = @presenter.book.description
            %a.b-n.in-gold-500.ml-10#btn_read_more= t('books.show_more')
            %a.b-n.in-gold-500.ml-10#hide_read_more.d-n= t('books.hide')
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= t('books.year_of_publication')
          %p.lead.small.pull-right= @presenter.book.publication_year
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= t('books.dimensions')
          %p.lead.small.pull-right #{t('books.h')}:#{@presenter.book.height}" x #{t('books.w')}: #{@presenter.book.width}" x #{t('books.d')}: #{@presenter.book.depth}"
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= t('books.materials')
          %p.lead.small.pull-right= @presenter.book.materials
  .mb-80#review_form
    - if user_signed_in?
      = render 'reviews/partials/form', book_id: @presenter.book.id, review: Review.new
  .mb-80
    %h3.in-gold-500.mb-25 Reviews (#{@presenter.reviews.count})
    = render partial: 'books/partials/review', collection: @presenter.reviews, as: :review