- @presenter.books.each do |book|
  .col-xs-6.col-sm-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        %img.img-shadow.general-thumbnail-img{src: book.title_image.url(:w200), alt: "design-book"}
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book, class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            = link_to cart_items_path(cart_item: { book_id: book.id, count: 1 }), method: :post, class: 'thumb-hover-link' do
              %i.fa.fa-shopping-cart.thumb-icon
    .general-thumb-info
      %p.title.text_overflow-hidden
        = book.title
      %p.font-16.in-gold-500 #{t(:currency)}#{book.price}
      %span.divider-sm
      %p.lead.small.text_overflow-hidden
        = book.authors_names
