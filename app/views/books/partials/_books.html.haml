- @presenter.books.each do |book|
  .col-xs-6.col-sm-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        %img.img-shadow.general-thumbnail-img{src: @presenter.title_image_url(book), alt: "design-book"}
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book, class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            %a.thumb-hover-link{href: "#"}
              %i.fa.fa-shopping-cart.thumb-icon
    .general-thumb-info
      %p.title.text_overflow-hidden
        = book.title
      %p.font-16.in-gold-500 #{t(:currency)}#{book.price}
      %span.divider-sm
      %p.lead.small.text_overflow-hidden
        = book.authors_names
