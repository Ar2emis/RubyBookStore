%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('registrations.sign_up')
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
      %i.fa.fa-facebook-official
    %p.general-login-text= t('registrations.or')
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'general_form width-370 center-form' }) do |f|
    .form-group.mb-30{class: "#{'has-error' if resource.errors[:email].any?}"}
      %label.control-label.input-label{for: "email"}= t('registrations.enter_email')
      = f.text_field :email, autocomplete: "email", class: 'form-control', placeholder: t('registrations.enter_email')
      %span.help-block
        - resource.errors[:email].each do |message|
          %li= message
    .form-group.mb-30{class: "#{'has-error' if resource.errors[:password].any?}"}
      %label.control-label.input-label{for: "password"}= t('registrations.password')
      = f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: t('registrations.password')
      %span.help-block
        - resource.errors[:password].each do |message|
          %li= message
    .form-group.mb-30{class: "#{'has-error' if resource.errors[:password_confirmation].any?}"}
      %label.control-label.input-label{for: "confirm"}= t('registrations.confirm_password')
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: t('registrations.confirm_password')
      %span.help-block
        - resource.errors[:password_confirmation].each do |message|
          %li= message
    .text-center
      = f.submit t('registrations.sign_up'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = t('registrations.already_have_an_account')
    %a.in-gold-500{href: new_user_session_path}= t('registrations.sign_in')