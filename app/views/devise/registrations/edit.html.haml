%main.container
  %h1.general-title-margin= t('registrations.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= t('registrations.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= t('registrations.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      = form_tag registration_path(resource_name), method: :put do |field|
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0= t('registrations.billing_address')
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0= t('registrations.shipping_address')
        .row
          .col-md-5.mb-40
            Billing form
            .text-center.general-text-align
              %button.btn{name: "only_address_type", value: "billing"}= t('registrations.save')
          .col-md-5.col-md-offset-1.mb-25
            Shipping form
            .text-center.general-text-align
              %button.btn{name: "only_address_type", value: "shipping"}= t('registrations.save')
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        = devise_error_messages!
        .col-sm-5
          %p.in-gold-500.font-18.mb-25= t('registrations.email')
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'general-form-md' }) do |f|
            .form-group.mb-35
              %label.control-label.font-weight-light{for: :email}= t('registrations.enter_email')
              = f.email_field :email, autofocus: true, type: "email", placeholder: t('registrations.enter_email'), class: 'form-control'
            .general-text-align
              = f.submit t('registrations.save'), class: 'btn btn-default mb-35'
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25= t('registrations.password')
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'general-form-md pb-25' }) do |f|
            .form-group.mb-30
              %label.control-label.font-weight-light{for: :current_password}= t('registrations.old_password')
              = f.password_field :current_password, autocomplete: "off", type: "password", placeholder: t('registrations.old_password'), class: 'form-control'
            .form-group.mb-30
              %label.control-label.font-weight-light{for: :password}= t('.new_password')
              = f.password_field :password, autocomplete: "off", type: "password", placeholder: t('registrations.new_password'), class: 'form-control'
            .form-group.mb-40
              %label.control-label.font-weight-light{for: :password_confirmation}= t('.confirm_password')
              = f.password_field :password_confirmation, autocomplete: "off", type: "password", placeholder: t('registrations.confirm_password'), class: 'form-control'
            .general-text-align
              = f.submit t('registrations.save'), class: 'btn btn-default mb-10'
        .col-sm-12
          .divider-lg-bottom
          %p.in-gold-500.font-18.mb-25.pt-20= t('registrations.remove_account')
          %form
            .general-settings-btn
              = link_to t('registrations.remove_my_account'), registration_path(resource_name), method: :delete, id: 'remove_button', class: 'btn disabled mb-20'
            .form-group.checkbox.general-settings-checkbox
              %label.font-weight-light.pl-0
                %input#remove.checkbox-input{type: "checkbox", hidden: "true"}
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text= t('registrations.i_understand')