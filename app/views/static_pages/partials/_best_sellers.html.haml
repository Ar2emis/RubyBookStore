.mb-35
  %h3= t('home.best_sellers')
  .row
  - @bestsellers.each do |book|
    .col-xs-6.col-sm-3
      .general-thumb-wrap
        .thumbnail.general-thumbnail
          %img.img-shadow.general-thumbnail-img{src: book.title_image.url(:w170), alt: "design-book"}
          .thumb-hover
            .general-thumb-link-wrap
              = link_to book, class: 'thumb-hover-link' do
                %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
              = link_to cart_path(cart: { cart_item: { book_id: book.id, amount: 1 } }), method: :put, class: 'thumb-hover-link' do
                %i.fa.fa-shopping-cart.thumb-icon
      .mb-35
        .clearfix
          %p.pull-right.font-16.in-gold-500= number_to_currency(book.price)
          %p.title.mr-55= book.title
        %span.divider-sm
        %p.lead.small= book.authors_names
