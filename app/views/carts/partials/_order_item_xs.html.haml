.general-cart-item.divider-lg-bottom
  = link_to cart_path(order: { order_item: { delete_id: order_item.id } }), method: :put, 'data-remote': true, class: 'close general-cart-close' do
    %span{'aria-hidden': "true"} &times;
  = link_to book_path(id: order_item.book.id) do
    .general-img-wrap-table
      %img.cart-img-shadow{src: order_item.book.title_image.url(:w170), alt: "design-book"}
    %p.title= order_item.book.title
  %table.table
    %tr
      %td
        %span.in-grey-600= t('cart.price')
      %td
        %span.font-16.in-gold-500= number_to_currency(order_item.book.price)
    %tr
      %td.vertical-middle
        %span.in-grey-600= t('cart.quantity')
      %td
        .input-group
          = link_to cart_path(order: { order_item: { book_id: order_item.book.id, amount: -1 } }), method: :put, 'data-remote': true, class: 'input-link mt-10' do
            %i.fa.fa-minus.line-heaght-40
          %input.form-control.quantity-input{type: "text", value: order_item.amount}
          = link_to cart_path(order: { order_item: { book_id: order_item.book.id, amount: 1 } }), method: :put, 'data-remote': true, class: 'input-link  mt-10' do
            %i.fa.fa-plus.line-heaght-40
    %tr
      %td
        %span.in-grey-600= t('cart.subtotal')
      %td
        %span.font-16.in-gold-500= number_to_currency(order_item.subtotal)
